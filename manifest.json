{
    "manifest_version": 2,

    "name": "play flexbox",
    "description": "preview flexbox effect and copy style",
    "version": "0.1",

    "browser_action": {
        "default_icon": {
            "19": "images/icon19.png",
            "38": "images/icon38.png"
        },
        "default_title": "Play Flexbox",
        "default_popup": "popup.html"
    },

    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    
    "permissions": [
        "contextMenus",
        "storage",
        "tabs",
        "http://*/*",
        "file:///*/*"
    ]
}
